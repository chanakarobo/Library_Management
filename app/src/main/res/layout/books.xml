<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Adduser"
    android:background="#4198f4">


    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_nam"
        android:layout_marginTop="100dp"
        android:hint="Book Name"
        android:textColorHint="#fff"
        android:drawablePadding="12dp"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        android:textSize="25dp"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="add books"
        android:id="@+id/btnad"
        android:layout_marginLeft="60dp"
        android:background="@drawable/background_login"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_viw"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_aut"
        android:layout_below="@+id/edit_nam"
        android:hint="Author"
        android:textColorHint="#fff"
        android:drawablePadding="12dp"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        android:background="@android:color/transparent"
        android:textSize="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_loc"
        android:layout_centerVertical="true"
        android:layout_below="@id/edit_aut"
        android:hint="Location"
        android:textColorHint="#fff"
        android:drawablePadding="12dp"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        android:background="@android:color/transparent"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_cat"
        android:layout_below="@+id/edit_loc"
        android:hint="Catagory"
        android:textColorHint="#fff"
        android:drawablePadding="12dp"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        android:background="@android:color/transparent"
        android:textSize="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adding books"
        android:textColor="#fff"
        android:textSize="30dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete books"
        android:id="@+id/btn_del"
        android:layout_marginLeft="60dp"
        android:background="@drawable/background_login"
        android:layout_below="@+id/btnad"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_id"
        android:hint="Book ID"
        android:textSize="25dp"
        android:textColorHint="#fff"
        android:drawablePadding="12dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/edit_nam"
        android:layout_alignEnd="@+id/edit_nam" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View"
        android:id="@+id/btn_viw"
        android:layout_marginLeft="30dp"
        android:background="@drawable/background_login"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/edit_cat"
        android:layout_marginTop="25dp" />

</RelativeLayout>
