<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#3f85f6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:layout_marginLeft="15dp"
        android:textColor="#ffff"
        android:id="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:background="@android:color/transparent"
        android:textSize="25dp"
        android:textColorHint="#fff"
        android:padding="8dp"
        android:layout_marginTop="35dp"
        android:drawablePadding="12dp"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        android:paddingLeft="20dp"
        android:id="@+id/TFname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TFmail"
        android:background="@android:color/transparent"
        android:hint="Addresses"
        android:padding="8dp"
        android:textSize="25dp"
        android:textColorHint="#fff"
        android:drawablePadding="12dp"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        android:paddingLeft="20dp"
        android:layout_below="@+id/TFname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TFuser"
        android:background="@android:color/transparent"
        android:hint="Username"
        android:textSize="25dp"
        android:padding="8dp"
        android:textColorHint="#fff"
        android:drawablePadding="12dp"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        android:paddingLeft="20dp"
        android:layout_below="@+id/TFmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TFpass1"
        android:hint="Password"
        android:password="true"
        android:background="@android:color/transparent"
        android:textSize="25dp"
        android:padding="8dp"
        android:textColorHint="#fff"
        android:drawablePadding="12dp"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        android:paddingLeft="20dp"
        android:layout_below="@+id/TFuser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TFpass2"
        android:hint="Confirm"
        android:padding="8dp"
        android:background="@android:color/transparent"
        android:textSize="25dp"
        android:textColorHint="#fff"
        android:password="true"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        android:drawablePadding="12dp"
        android:layout_below="@+id/TFpass1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="#FF1266ED"
        android:textSize="15dp"
        android:layout_marginLeft="60dp"
        android:id="@+id/btnreg"
        android:background="@drawable/background_login"
        android:layout_below="@+id/TFpass2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:onClick="OnRegisterClick" />


</RelativeLayout>